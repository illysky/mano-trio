# SSD1309 display controller configuration options

# Copyright (c) 2018 Phytec Messtechnik GmbH
# SPDX-License-Identifier: Apache-2.0

menuconfig SSD1309
	bool "SSD1309 display driver"
	default y
	depends on DT_HAS_SOLOMON_SSD1309FB_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_SOLOMON_SSD1309FB),i2c)
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_SOLOMON_SSD1309FB),spi)
	help
	  Enable driver for SSD1309 display driver.

if SSD1309

config SSD1309_DEFAULT_CONTRAST
	int "SSD1309 default contrast"
	default 128
	range 0 255
	help
	  SSD1309 default contrast.

choice SSD1309_CONTROLLER_TYPE
	prompt "Display controller type"
	default SSD1309_DEFAULT
	help
	  Specify the type of the controller.

config SSD1309_DEFAULT
	bool "Default SSD1309 controller"

config SSD1309_SH1106_COMPATIBLE
	bool "SH1106 compatible mode"

endchoice

config SSD1309_REVERSE_MODE
	bool "SSD1309 reverse mode"
	help
	  SSD1309 reverse video mode.


module = SSD1309
module-str = ssd1309
source "subsys/logging/Kconfig.template.log_config"


endif # SSD1309