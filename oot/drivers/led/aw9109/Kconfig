config AW9109
	bool "AW9109 LED driver"
	default y
	depends on DT_HAS_AWINIC_AW9109_ENABLED
	select I2C
	help
	  Enable LED driver for AW9109.
	  AW9109 LED driver has 9 channels with constant current


if AW9109

config AW9109_CURRENT_CHANNEL_0
	int "AW9109 Channel 0 CC"
	default 0
	range 0 7
	help
	  AW9109 Channel 0 CC

