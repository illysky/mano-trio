	int "AW9109 Channel 3 CC"
	default 0
	range 0 7
	help
	  AW9109 Channel 3 CC

config AW9109_CURRENT_CHANNEL_4
	int "AW9109 Channel 4 CC"
	default 0
	range 0 7
	help
	  AW9109 Channel 4 CC

config AW9109_CURRENT_CHANNEL_5
	int "AW9109 Channel 5 CC"
	default 0
	range 0 7
	help
	  AW9109 Channel 5 CC

